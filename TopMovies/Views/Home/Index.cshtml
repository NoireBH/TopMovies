@model FeaturedMoviesViewModel
@inject IMovieService movieService

@{
	FeaturedMoviesViewModel[] featuredMovies = await movieService.GetFeaturedMoviesAsync();
}

<div class="text-center">
	<h1 class="display-4">Featured Movies for today:</h1>
	<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
		<div class="carousel-inner">
			@for (int i = 0; i < featuredMovies.Length; i++)
			{
				var featuredMovie = featuredMovies[i];

				<div class="carousel-item @(i == 0 ? "active" : string.Empty)">
					<img class="d-block w-100" style="height:400px" alt="@featuredMovie.Name"
						 src="@featuredMovie.ImageUrl">
				</div>
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="" asp-action=""
						   asp-route-id="@featuredMovie.Id"> @featuredMovie.Name</a>
					</h5>
				</div>
			}
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>
