@model FeaturedMoviesViewModel
@inject IMovieService movieService

@{
	ViewData["Title"] = "Home Page";
	FeaturedMoviesViewModel[] featuredMovies = await movieService.GetFeaturedMoviesAsync();
}

<div class="text-center">
	<h1 class="display-4">Featured Movies for today:</h1>
	<div id="carouselExample" class="carousel slide">
		<div class="carousel-inner">
			@for (int i = 0; i < featuredMovies.Length; i++)
			{
				<div class="carousel-item">
					<img src="@Model.ImageUrl" class="d-block w-100" alt="@Model.Name">
				</div>
				<div class="carousel-caption d-none d-md-block">
					<h5>
						<a class="btn btn-primary" asp-controller="House" asp-action="Details"
						   asp-route-id="@Model.Id"> @Model.Name</a>
					</h5>
				</div>
			}
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
</div>
