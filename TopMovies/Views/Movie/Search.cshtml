@model MovieSearchFormModel

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 text-center">
		<form method="post">
			<div class="form-group">
				<label asp-for="SearchTeam"></label>
				<input asp-for="SearchTeam" class="form-control" placeholder="search...">
				<span asp-validation-for="SearchTeam" class="small text-danger"></span>
			</div>
			<div class="text-center">
				<input class="btn btn-primary mt-3" type="submit" value="Search" />
			</div>
		</form>
	</div>
</div>