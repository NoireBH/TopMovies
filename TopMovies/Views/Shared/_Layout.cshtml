<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Top Movies</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/TopMovies.styles.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link href="~/font-awesome/css/all.css" rel="stylesheet" />
	<link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.css" integrity="sha512-6S2HWzVFxruDlZxI3sXOZZ4/eJ8AcxkQH1+JjSe/ONCEqR9L4Ysq5JdT5ipqtzU7WHalNwzwBv+iE51gNHJNqQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
	<partial name="_NotificationsPartial" />
	<header>
		<div class="container-fluid p-0 bg-dark">
			<nav class="navbar navbar-expand-lg navbar-dark bg-dark pb-0">
				<div class="login container-fluid d-flex">
					<a class="navbar-brand site-logo" asp-area="" asp-controller="Home" asp-action="Index" style="color:black">
						TOPMOVIES
					</a>
					<form class="d-flex flex-grow-1">
						<input class="form-control" type="search" placeholder="Search..." aria-label="Search">
						<button class="btn search-btn-nav ms-1" type="submit">Search</button>
					</form>
					<div>

						<div class="align-self-end">
							<partial name="_LoginPartial" />
						</div>
					</div>					
				</div>				
			</nav>
			<div class="container-fluid text-center pb-2 d-flex flex-column">
				<a class="text-light advanced-search-btn" asp-controller="Movie" asp-action="AdvancedSearch">Advanced Search</a>
				<a class="text-light advanced-search-btn" asp-controller="Movie" asp-action="All">All Movies</a>
				@if (User.IsAdmin())
				{
					<a class="text-light advanced-search-btn" asp-controller="Movie" asp-action="Add">Add Movie</a>
				}				
			</div>
		</div>
	</header>
	<div class="container-fluid p-0">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-light main-layout-footer">
		<div class="container-fluid text-center bg-dark p-3 flex-column">
			<p class="d-flex justify-content-center align-content-end mb-1">
				Have any questions? Check out our <a class="d-flex align-items-center ms-1" asp-controller="Help" asp-action="QandA"> Q&A section<i class="fa-solid fa-arrow-up-right-from-square ms-1"></i> </a>
			</p>
			<p class="mb-0">&copy; 2024 by TopMovies.com</p>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
